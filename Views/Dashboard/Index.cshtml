@* Summary Widgets *@
<div class="row mb-4">
    <!-- Income Widget -->
    <div class="col-md-12 d-flex flex-wrap justify-content-center">
        <!-- Total Income -->
        <div class="col-md-6 col-lg-3 d-flex flex-column justify-content-center p-5 bg-light border rounded widget-summary income-widget">
            <div class="d-flex flex-column m-auto py-3">
                <i class="fa-solid fa-dollar-sign fa-2xl"></i>
                <div class="d-flex flex-column m-auto py-3">
                    <span class="lead">Total Income</span>
                    <h1 class="display-6 fw-bold">@ViewBag.TotalIncome</h1>
                </div>
            </div>
        </div>

        <!-- Total Expense -->
        <div class="col-md-6 col-lg-3 d-flex flex-column justify-content-center p-5 bg-light border rounded widget-summary expense-widget">
            <div class="d-flex flex-column m-auto py-3">
                <i class="fa-solid fa-dollar-sign fa-2xl"></i>
                <div class="d-flex flex-column m-auto py-3">
                    <span class="lead">Total Expense</span>
                    <h1 class="display-6 fw-bold">@ViewBag.TotalExpense</h1>
                </div>
            </div>
        </div>

        <!-- Balance -->
        <div class="col-md-6 col-lg-3 d-flex flex-column justify-content-center p-5 bg-light border rounded widget-summary balance-widget">
            <div class="d-flex flex-column m-auto py-3">
                <i class="fa-solid fa-dollar-sign fa-2xl"></i>
                <div class="d-flex flex-column m-auto py-3">
                    <span class="lead">Balance</span>
                    <h1 class="display-6 fw-bold">@ViewBag.Balance</h1>
                </div>
            </div>
        </div>
    </div>
</div>

@* Doughnut and Spline Chart *@
<div class="row mb-4">
    <!-- Doughnut Chart Widget -->
    <div class="col-md-6">
        <div class="widget chart p-4 bg-light border rounded">
            <h5 class="fw-bold">Expense By Category</h5>
            <ejs-accumulationchart id="doughnutchart" title="Expense By Category" >
                <e-accumulation-series-collection>
                    <e-accumulation-series dataSource="@ViewBag.DoughnutChartData"
                                           xName="categoryTitleWithIcon"
                                           yName="amount" innerRadius="60%">
                        <e-accumulationseries-datalabel name="formattedAmount" visible="true">
                        </e-accumulationseries-datalabel>
                    </e-accumulation-series>
                </e-accumulation-series-collection>
            </ejs-accumulationchart>
        </div>
    </div>

    <!-- Spline Chart Widget -->
    <div class="col-md-6">
        <div class="widget chart p-4 bg-light border rounded">
            <h5 class="fw-bold">Income vs Expense</h5>
            <ejs-chart id="spline-chart" background="#1a222b"
                palettes=@(new string[] {"#54ffa9", "#ffe91a"})>
                <e-chart-primaryxaxis valueType="Category"></e-chart-primaryxaxis>
                <e-chart-primaryyaxis></e-chart-primaryyaxis>
                <e-series-collection>
                    <!-- Income Series -->
                    <e-series dataSource="@ViewBag.SplineChartData"
                              xName="Day"
                              yName="Income"
                              name="Income"
                              type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline"
                              color="#F08080"
                              width="4">

                    </e-series>

                    <!-- Expense Series -->
                    <e-series dataSource="@ViewBag.SplineChartData"
                              xName="Day"
                              yName="Expense"
                              name="Expense"
                              type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline"
                              color="#8B0000"
                              width="4">
                        <!-- Set your desired color here -->
                        <!-- Optional: Set line width -->
                    </e-series>


                </e-series-collection>
            </ejs-chart>
        </div>
    </div>
</div>
