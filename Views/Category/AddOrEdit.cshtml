@model Expense_Tracker.Models.Category

@{
    ViewData["Page Title"] = Model.CategoryId == 0 ? "Create a New Category" : "Edit Category";
}

<h1 class="text-center">@ViewData["Page Title"]</h1>

<div class="text-center mb-4">
    <h4>@(Model.CategoryId == 0 ? "Create" : "Edit") Category</h4>
    <hr />
</div>

<div class="d-flex justify-content-center">
    <div style="max-width: 600px; width: 100%;">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" name="CategoryId" value="@Model.CategoryId" />

            <div class="mb-3">
                <div class="d-flex justify-content-center">
                    <div class="e-btn-group">
                        <input type="radio" id="radioExpense" name="Type" value="Expense"
                               checked="@(Model.Type == "Expense")" />
                        <label class="e-btn" for="radioExpense">Expense</label>
                        <input type="radio" id="radioIncome" name="Type" value="Income"
                               checked="@(Model.Type == "Income")" />
                        <label class="e-btn" for="radioIncome">Income</label>
                    </div>
                </div>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <ejs-textbox id="Title" ejs-for="Title" placeholder="Title" showClearButton="true" floatLabelType="Always"></ejs-textbox>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <ejs-textbox id="Icon" ejs-for="Icon" placeholder="Icon" showClearButton="true" floatLabelType="Always"></ejs-textbox>
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>

            <div class="mb-3 text-center">
                <ejs-button id="submit" type="submit" content="Submit"></ejs-button>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <i class="fa fa-code fa-5x" aria-hidden="true"></i>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
